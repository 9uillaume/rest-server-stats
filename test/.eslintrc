{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "import"
    ],
    "root": true,
    "rules": {
        "no-undef": [
            "off"
        ],
        "no-loop-func": [
            "off"
        ],
        "no-await-in-loop": [
            "off"
        ],
        "no-template-curly-in-string": [
            "off"
        ],
        "no-restricted-syntax": [
            "error",
            "ForInStatement",
            "LabeledStatement",
            "WithStatement"
        ]
    }
}